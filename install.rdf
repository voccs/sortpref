<?xml version="1.0"?>

<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">
    <em:id>{bfa92939-6ded-4a3f-885f-55dfcce728b8}</em:id>
    <em:name>SortPref</em:name>
    <em:version>0.1</em:version>
    
    <!-- Thunderbird -->
    <em:targetApplication>
      <Description>
        <em:id>{3550f703-e582-4d05-9a08-453d09bdfdc6}</em:id>
        <em:minVersion>3.0</em:minVersion>
        <em:maxVersion>3.0.*</em:maxVersion>
      </Description>
    </em:targetApplication>
    
    <!-- The contents of the extension //-->
    <em:file>
      <Description about="urn:mozilla:extension:file:sortpref.jar">
        <em:package>content/sortpref/</em:package>
        <em:locale>locale/en-US/sortpref/</em:locale>
        <em:skin>skin/classic/sortpref/</em:skin>
      </Description>
    </em:file>

    <!-- Front End Integration Hooks (used by Extension Manager)-->
    <em:description>Adds the ability to control primary, default sorting options.</em:description>
    <em:creator>Ryan Lee (ryan@ryanlee.org)</em:creator>
    <em:iconURL>chrome://sortpref/skin/icon32x32.png</em:iconURL>
    <em:homepageURL>http://ryanlee.org/software/mozilla/thunderbird/sortpref/</em:homepageURL>
    <em:optionsURL>chrome://sortpref/content/options.xul</em:optionsURL>
    <em:type parseType="Integer">2</em:type> <!-- type=extension -->
    <em:localized>
      <Description>
        <em:locale>es-ES</em:locale>
        <em:name>SortPref</em:name>
        <em:description>Añadir la habilidad al control primario, opciones de ordenación predeterminadas.</em:description>
      </Description>
    </em:localized>
    <em:localized>
      <Description>
        <em:locale>pt-BR</em:locale>
        <em:name>SortPref</em:name>
        <em:description>Acrescenta a função de controlar as opções de organização padrão das mensagens.</em:description>
      </Description>
    </em:localized>

  </Description>
</RDF>
